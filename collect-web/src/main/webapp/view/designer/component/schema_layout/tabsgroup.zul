<zk>
	<tabbox id="tabbox">
		<tabs>
			<zk forEach="@load(vm.tabGroup.tabs)">
				<tab label="@load(each.label)"
					onClose="@command('removeTab', group=tabGroup, tab=each)" 
					closable="true" />
			</zk>
			<tab label="+" onClick="@command('addTab', group=tabGroup)" />
		</tabs>
		<tabpanels forEach="${tabGroup.tabs}">
		</tabpanels>
	</tabbox>
</zk>