<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <!-- include tomcat instance file -->
    <fileSet>
      <directory>${project.build.directory}/apache-tomcat-${tomcat.version}</directory>
      <outputDirectory>apache-tomcat-${tomcat.version}</outputDirectory>
      <excludes>
        <exclude>**/webapps/docs/**</exclude>
        <exclude>**/webapps/examples/**</exclude>
        <!-- <exclude>**/webapps/host-manager/**</exclude> -->
        <!-- <exclude>**/webapps/manager/**</exclude> -->
      </excludes>
    </fileSet>
    <!-- include conf -->
    <fileSet>
      <directory>${basedir}/src/main/assembly/resources/tomcat/conf</directory>
      <outputDirectory>apache-tomcat-${tomcat.version}/conf</outputDirectory>
      <includes>
        <include>**/**</include>
      </includes>
    </fileSet>
    <!-- include war file -->
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>apache-tomcat-${tomcat.version}/webapps</outputDirectory>
      <includes>
        <include>collect.war</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>apache-tomcat-${tomcat.version}/lib</outputDirectory>
      <includes>
        <include>postgresql:postgresql:jar</include>
        <include>commons-pool:commons-pool:jar</include>
        <include>commons-dbcp:commons-dbcp:jar</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
