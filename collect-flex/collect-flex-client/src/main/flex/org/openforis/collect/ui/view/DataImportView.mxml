<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 creationComplete="creationCompleteHandler(event)"
		 xmlns:component="org.openforis.collect.ui.component.*"
		 width="100%" height="100%">
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" />
	</s:layout>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import org.openforis.collect.i18n.Message;
			import org.openforis.collect.model.proxy.RecordProxy;
			import org.openforis.collect.presenter.DataImportPresenter;
			import org.openforis.collect.remoting.service.dataImport.DataImportSummaryItemProxy;
			import org.openforis.collect.util.StringUtil;
			import org.openforis.collect.util.UIUtil;
			
			public static const STATE_DEFAULT:String = "default";
			public static const STATE_LOADING:String = "loading";
			public static const STATE_UPLOADING:String = "uploading";
			public static const STATE_UPLOAD_COMPLETE:String = "uploadComplete";
			public static const STATE_UPLOAD_COMPLETE_NEW_SURVEY:String = "uploadCompleteNewSurvey";
			public static const STATE_IMPORT_RUNNING:String = "importRunning";
			public static const STATE_IMPORT_COMPLETE:String = "importComplete";
			
			private var _presenter:DataImportPresenter;
			
			protected function creationCompleteHandler(event:FlexEvent):void {
				_presenter = new DataImportPresenter(this);
			}
			
			protected function recordKeyLabelFunction(item:Object, column:Object):String {
				var summaryItem:DataImportSummaryItemProxy = item as DataImportSummaryItemProxy;
				var record:RecordProxy = summaryItem.record;
				var key:String = StringUtil.concat("-", record.rootEntityKeys.toArray());
				return key;
			}
			
		]]>
		
	</fx:Script>

	<s:states>
		<s:State name="default" />
		<s:State name="loading" />
		<s:State name="uploading" />
		<s:State name="uploadComplete" />
		<s:State name="uploadCompleteNewSurvey" basedOn="uploadComplete" />
		<s:State name="importRunning" stateGroups="importing" />
		<s:State name="importComplete" stateGroups="importing" />
	</s:states>
	
	<s:Button id="uploadButton" 
			  label="{Message.get('dataImport.selectFileToUpload')}"
			  includeIn="default"
			  useHandCursor="true"
			  buttonMode="true"
			  />

	<component:LoadingContent includeIn="loading"
							  height="100%" width="100%" />
	
	<s:VGroup includeInLayout="false" includeInLayout.uploadComplete="true"
			  visible="false" visible.uploadComplete="true">
		<s:Form id="form" includeIn="uploadCompleteNewSurvey">
			<s:FormItem label="{Message.get('dataImport.newSurveyNameLabel')}">
				<s:TextInput id="surveyNameTextInput" editable="false" editable.uploadCompleteNewSurvey="true" />
			</s:FormItem>
		</s:Form>
		
		<s:VGroup id="conflictsContainer" 
				  visible="{conflictDataGrid.dataProvider.length > 0}"
				  includeInLayout="{conflictDataGrid.dataProvider.length > 0}">
			<s:Label text="{Message.get('dataImport.recordsInConflict')}" />
			
			<mx:AdvancedDataGrid id="conflictDataGrid"
								 sortExpertMode="true"
								 selectable="false">
				<mx:groupedColumns>
					<mx:AdvancedDataGridColumn dataField="record.id"
											   headerText="{Message.get('dataImport.recordList.key')}" 
											   labelFunction="{recordKeyLabelFunction}" />
					<mx:AdvancedDataGridColumnGroup headerText="{Message.get('dataImport.recordConflicts.currentRecord')}">
						<mx:AdvancedDataGridColumn dataField="conflictingRecord.creationDate" 
												   width="120"
												   headerText="{Message.get('dataImport.recordList.creationDate')}" 
												   labelFunction="{UIUtil.gridColumnDateTimeLabelFunction}" />
						<mx:AdvancedDataGridColumn dataField="conflictingRecord.modifiedDate" 
												   width="120"
												   headerText="{Message.get('dataImport.recordList.modifiedDate')}" 
												   labelFunction="{UIUtil.gridColumnDateTimeLabelFunction}" />
					</mx:AdvancedDataGridColumnGroup>
					<mx:AdvancedDataGridColumnGroup headerText="{Message.get('dataImport.recordConflicts.newRecord')}">
						<mx:AdvancedDataGridColumn dataField="record.creationDate" 
												   width="120"
												   headerText="{Message.get('dataImport.recordList.creationDate')}" 
												   labelFunction="{UIUtil.gridColumnDateTimeLabelFunction}" />
						<mx:AdvancedDataGridColumn dataField="record.modifiedDate" 
												   width="120"
												   headerText="{Message.get('dataImport.recordList.modifiedDate')}" 
												   labelFunction="{UIUtil.gridColumnDateTimeLabelFunction}" />
					</mx:AdvancedDataGridColumnGroup>
					<mx:AdvancedDataGridColumn dataField="selected" 
											   headerText="{Message.get('dataImport.recordConflicts.replace')}"
											   width="60"
											   editable="true"
											   itemRenderer="mx.controls.CheckBox"
											   rendererIsEditor="true"
											   />
				</mx:groupedColumns>
			</mx:AdvancedDataGrid>
		</s:VGroup>
		
		<s:VGroup id="recordsContainer" 
				  visible="{recordToImportDataGrid.dataProvider.length > 0}"
				  includeInLayout="{recordToImportDataGrid.dataProvider.length > 0}">
			<s:Label text="{Message.get('dataImport.recordsToBeImported')}" />
	
			<mx:AdvancedDataGrid id="recordToImportDataGrid"
								 sortExpertMode="true"
								 selectable="false">
				<mx:columns>
					<mx:AdvancedDataGridColumn dataField="record.id"
											   headerText="{Message.get('dataImport.recordList.key')}" 
											   labelFunction="{recordKeyLabelFunction}" />
					<mx:AdvancedDataGridColumn dataField="record.creationDate"
											   width="120"
											   headerText="{Message.get('dataImport.recordList.creationDate')}"
											   labelFunction="{UIUtil.gridColumnDateTimeLabelFunction}" />
					<mx:AdvancedDataGridColumn dataField="record.modifiedDate" 
											   width="120"
											   headerText="{Message.get('dataImport.recordList.modifiedDate')}"
											   labelFunction="{UIUtil.gridColumnDateTimeLabelFunction}" />
					<mx:AdvancedDataGridColumn dataField="selected" 
											   headerText="{Message.get('dataImport.recordList.import')}"
											   width="60"
											   editable="true"
											   itemRenderer="mx.controls.CheckBox"
											   rendererIsEditor="true"
											   />
				</mx:columns>
			</mx:AdvancedDataGrid>
		</s:VGroup>
		
		<s:VGroup id="skippedFilesContainer" 
				  visible="{skippedFilesDataGrid.dataProvider.length > 0}"
				  includeInLayout="{skippedFilesDataGrid.dataProvider.length > 0}">
			<s:Label text="{Message.get('dataImport.skippedFiles')}" />
		
			<s:DataGrid id="skippedFilesDataGrid" >
				<s:columns>
					<s:ArrayList>
						<s:GridColumn dataField="fileName" headerText="{Message.get('dataImport.skippedFiles.fileName')}" />
						<s:GridColumn dataField="message" headerText="{Message.get('dataImport.skippedFiles.message')}" />
					</s:ArrayList>
				</s:columns>
			</s:DataGrid>
		</s:VGroup>

		<s:Button id="startImportButton" 
				  label="{Message.get('dataImport.startImport')}"
				  useHandCursor="true"
				  buttonMode="true"
				  includeInLayout="false" includeInLayout.uploadComplete="true" includeInLayout.importing="false"
				  visible="false" visible.uploadComplete="true" visible.importing="false"
				  />
	</s:VGroup>
	
	<s:VGroup width="100%" 
			  visible="false" visible.importing="true" visible.uploading="true"
			  includeInLayout="false" includeInLayout.importing="true" includeInLayout.uploading="true"
			  >
		<mx:ProgressBar id="progressBar"
						horizontalCenter="0"
						verticalCenter="0"
						mode="manual"
						label="%3%"
						labelPlacement="center"
						width="80%"
						/>
		
		<s:Label id="progressLabel" />
		
		<s:Button id="cancelButton"
				  label="{Message.get('global.cancel')}"
				  useHandCursor="true"
				  buttonMode="true"
				  visible.importComplete="false"
				  />
		
		<s:VGroup width="100%">
			<s:Label text="{Message.get('dataImport.filesInError')}" />
			<s:TextArea id="errorsTextArea"
						editable="false"
						width="100%"
						heightInLines="5" />
			
		</s:VGroup>
		
	</s:VGroup>

</s:Group>

