<?xml version="1.0" encoding="utf-8"?>
<detail:EntityFormItem 
		xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:detail="org.openforis.collect.ui.component.detail.*"
		>
	
	<s:BorderContainer id="border" 
					   height="100%" 
					   width="100%"
					   minHeight="0"
					   minWidth="0">
		<s:layout>
			<s:VerticalLayout />
		</s:layout>

		<s:Label text="{entityDefinition.getLabelText()}" styleName="bold" />
	
		<s:DataGroup dataProvider="{nodeDefinitions}">
			<s:layout>
				<s:VerticalLayout gap="2" paddingLeft="20" />
			</s:layout>
			<s:itemRenderer>
				<fx:Component>
					<detail:FormDataGroupItemRenderer
						modelVersion="{outerDocument.modelVersion}"
						entity="{outerDocument.entity}"
						isInDataGroup="false"
						labelWidth="130"
						/>
				</fx:Component>
			</s:itemRenderer>
		</s:DataGroup>
		
	</s:BorderContainer>
	
</detail:EntityFormItem>
