<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent 
					xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   	xmlns:s="library://ns.adobe.com/flex/spark" 
				   	xmlns:mx="library://ns.adobe.com/flex/mx" 
				   	
					width="100%" 
				   	height="100%"
				   >
	
	<fx:Script>
		<![CDATA[
			import mx.core.IVisualElement;
			
			import org.openforis.collect.metamodel.proxy.EntityDefinitionProxy;
			
			private var _entityDefinition:EntityDefinitionProxy;
			
			[Bindable]
			public function get entityDefinition():EntityDefinitionProxy {
				return _entityDefinition;
			}

			public function set entityDefinition(value:EntityDefinitionProxy):void {
				_entityDefinition = value;
			}

			public function addToForm(component:IVisualElement):void {
				if(!this.initialized){
					this.initialize();
				}
				if(!borderContainer.initialized) {
					borderContainer.initialize();
				}
				form.addElement(component);
			}
			
		]]>
	</fx:Script>
 	
	<s:BorderContainer
			 width="100%" 
			 height="100%"
			 
			 borderColor="#CCCCCC" 
			 borderAlpha="0.8" 
			 borderStyle="solid" 
			 borderWeight="1"
			 id="borderContainer"
			 >
		<s:layout>
			<s:VerticalLayout gap="10" />
		</s:layout>
	
		<s:Scroller height="100%" width="100%" visible="true" id="scroller">
			<s:Group width="100%" id="group">
				<s:Form height="100%" width="100%" id="form">
					<s:layout>
						<s:FormLayout gap="-15" paddingLeft="0" />
					</s:layout>
				</s:Form>
			</s:Group>
		</s:Scroller>
	
	</s:BorderContainer>

</s:NavigatorContent>