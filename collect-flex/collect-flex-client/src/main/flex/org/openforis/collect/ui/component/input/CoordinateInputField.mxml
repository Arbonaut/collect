<?xml version="1.0" encoding="utf-8"?>
<input:InputField xmlns:fx="http://ns.adobe.com/mxml/2009" 
				  xmlns:s="library://ns.adobe.com/flex/spark" 
				  xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:input="org.openforis.collect.ui.component.input.*"
				  >
	<fx:Script>
		<![CDATA[
			import org.openforis.collect.i18n.Message;
			import org.openforis.collect.presenter.CoordinateInputFieldPresenter;
			
			override protected function initPresenter():void {
				this.presenter = new CoordinateInputFieldPresenter(this);
			}
		]]>
	</fx:Script>

	<s:BorderContainer 
		id="inputBox"
		minHeight="0"
		styleName="noError"
		tabEnabled="false">
		<s:layout>
			<s:VerticalLayout>
				<s:verticalAlign>middle</s:verticalAlign>
				<s:horizontalAlign>left</s:horizontalAlign>
				<s:gap>0</s:gap>
				<s:paddingLeft>0</s:paddingLeft>
			</s:VerticalLayout>
		</s:layout>
	
		
		<s:HGroup>
			<s:Label width="100" textAlign="right" text="{Message.get('edit.coordinate.srs')}" />
			<s:DropDownList id="srsDropDown" width="150" />
		</s:HGroup>
		
		<s:HGroup>
			<s:Label width="100" textAlign="right" text="{Message.get('edit.coordinate.x')}" />
			<input:TextInput id="xTextInput" width="100" />
		</s:HGroup>
		
		<s:HGroup>
			<s:Label width="100" textAlign="right" text="{Message.get('edit.coordinate.y')}" />
			<input:TextInput id="yTextInput" width="100" />
		</s:HGroup>
		
	</s:BorderContainer>
	
</input:InputField>
