<?xml version="1.0" encoding="utf-8"?>
<detail:CompositeAttributeRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				  xmlns:s="library://ns.adobe.com/flex/spark" 
				  xmlns:mx="library://ns.adobe.com/flex/mx" 
				  xmlns:input="org.openforis.collect.ui.component.input.*" 
				  xmlns:detail="org.openforis.collect.ui.component.detail.*"
				  width="60"
				  >
	
	<fx:Script>
		<![CDATA[
			private var _separator:String = ":";
			
			[Bindable]
			public function get separator():String {
				return _separator;
			}

			public function set separator(value:String):void {
				_separator = value;
			}

		]]>
	</fx:Script>
	
	<s:HGroup 
			verticalAlign="middle"
			gap="2">
		<input:NumericInputField id="hour"
								 width="25" 
								 maxChars="2"
								 attributeDefinition="{attributeDefinition}"
								 parentEntity="{parentEntity}"
								 attribute="{attribute}"
								 fieldIndex="0"
								 />
		<s:Label id="separatorLabel" text="{separator}" />
		<input:NumericInputField id="minute"
								 width="25" 
								 maxChars="2"
								 attributeDefinition="{attributeDefinition}"
								 parentEntity="{parentEntity}"
								 attribute="{attribute}"
								 fieldIndex="1" />
	</s:HGroup>
	
</detail:CompositeAttributeRenderer>
