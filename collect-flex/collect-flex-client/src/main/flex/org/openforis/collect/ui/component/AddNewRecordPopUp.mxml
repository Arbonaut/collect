<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   creationPolicy="all"
			   title="{Message.get('list.newRecordPopUp.title')}"
			   creationComplete="creationCompleteHandler(event)"
			   >
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import org.openforis.collect.i18n.Message;
			import org.openforis.collect.metamodel.proxy.AttributeDefinitionProxy;
			import org.openforis.collect.metamodel.proxy.ModelVersionProxy;
			import org.openforis.collect.presenter.AddNewRecordPopUpPresenter;
			
			private var _presenter:AddNewRecordPopUpPresenter;
			
			protected function creationCompleteHandler(event:FlexEvent):void {
				_presenter = new AddNewRecordPopUpPresenter(this);
			}
			
			protected function versionLabelFunction(item:ModelVersionProxy):String {
				return item.getLabelText();
			}
			
		]]>
	</fx:Script>
	
	<s:VGroup verticalAlign="middle" gap="5">
		<s:Form>
			<s:layout>
				<s:VerticalLayout />
			</s:layout>
			
			<s:DataGroup id="keyDataGroup">
				<s:itemRenderer>
					<fx:Component>
						<s:ItemRenderer autoDrawBackground="false">
							<fx:Script>
								<![CDATA[
									import org.openforis.collect.metamodel.proxy.AttributeDefinitionProxy;
								]]>
							</fx:Script>
							<s:FormItem label="{(data as AttributeDefinitionProxy).getLabelText()}" width="150">
								<s:TextInput id="keyTextInput" width="100" />
							</s:FormItem>
						</s:ItemRenderer>
					</fx:Component>
				</s:itemRenderer>
			</s:DataGroup>
			
			<s:FormItem label="{Message.get('list.newRecordPopUp.version')}">
				<s:DropDownList id="versionsDropDownList" 
								labelFunction="versionLabelFunction"
								prompt="---"
								width="250"
								/>
			</s:FormItem>
		</s:Form>
		
		<s:HGroup id="buttonBar" width="100%" horizontalAlign="center" verticalAlign="middle" gap="20">
			<s:Button id="addButton" buttonMode="true" useHandCursor="true"
					  label="{Message.get('list.newRecordPopUp.add')}"/>
			<s:Button id="cancelButton" buttonMode="true" useHandCursor="true"
					  label="{Message.get('list.newRecordPopUp.cancel')}"/>
		</s:HGroup>
	</s:VGroup>
	
</s:TitleWindow>
